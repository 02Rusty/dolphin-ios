# -*- python -*- 

Import('env')
import sys

name = "Plugin_nJoy_Testing"

if not env['HAVE_SDL']:
    print name + " must have SDL to be build"
    Return()

files = [
	'nJoy.cpp',
	'GUI/AboutBox.cpp',
	'GUI/ConfigBox.cpp',
	]

padenv = env.Clone()
padenv.Append(
	CXXFLAGS = [ '-fPIC' ],
	LIBS = [ 'common' ],
	)
if not env['osx64']:
    padenv.SharedLibrary(env['plugin_dir']+name, files)
