Import('env')

files = ["LogWindow.cpp", 
         "BreakPointDlg.cpp",
         "BreakpointView.cpp",
         "CodeView.cpp",
         "BreakpointWindow.cpp",
         "CodeWindow.cpp",
         "CodeView.cpp",
         "Debugger.cpp", 
         "MemoryCheckDlg.cpp",
         "MemoryView.cpp",
         "MemoryWindow.cpp",
         "RegisterWindow.cpp",
         "RegisterView.cpp",
         "JitWindow.cpp",
        ]
wxenv = env.Copy()
wxenv.Append(
	CXXFLAGS = ' ' + ' '.join([
		'`wx-config --cppflags`',
		'-DUSE_XPM_BITMAPS',
		'-DwxNEEDS_CHARPP'
		]),
	LINKFLAGS = ' ' + ' '.join([
		'-L/usr/local/lib',
		'-pthread',
		'`wx-config --libs --debug`'
		])
	)
wxenv.StaticLibrary("debwx", files, LIBS = [ "common" ])
