# -*- python -*-

Import('env')

files = [
    'AudioCommonConfig.cpp',
    'WaveFile.cpp',
    'Mixer.cpp',
    'AudioCommon.cpp',
    ]

acenv = env.Clone()
acenv.Append(CXXFLAGS = [ '-fPIC' ])

if acenv['HAVE_OPENAL']:
    files += [ 'OpenALStream.cpp', 'aldlist.cpp' ]
    
if acenv['HAVE_AO']:
    files += [ 'AOSoundStream.cpp' ]
    
acenv.StaticLibrary(env['local_libs'] + 'audiocommon', files)
